/* ===== RESPONSIVE DESIGN ===== */
/*
   Breakpoints for various screen sizes
   - Tablet landscape down
   - Mobile portrait down
*/
@media (max-width: 768px) {
  body {
    padding: 1rem;
  }
  
  .form-section, .table-section {
    padding: 1.5rem;
  }
  
  table {
    display: block;
    overflow-x: auto;
  }
  
  button {
    padding: 0.8rem 1.5rem;
  }
}

@media (max-width: 480px) {
  h1 {
    font-size: 2rem;
  }
  
  h2 {
    font-size: 1.5rem;
  }
  
  .form-section {
    padding: 1.25rem;
  }
  
  input[type="text"] {
    padding: 0.8rem;
  }
}

